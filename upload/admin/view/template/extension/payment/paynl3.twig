{{ header }}{{ column_left }}

<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-pay" data-toggle="tooltip" title="{{ button_save }}"
                        class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}"
                   class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible">
                <i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        {% if success_message %}
            <div class="alert alert-success alert-dismissible">
                <i class="fa fa-exclamation-circle"></i> {{ success_message }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3><br/><br/>
                <p>{{ text_register }}<a href="{{ link_register }}" target="_blank">{{ text_link_register }}</a>{{ text_after_register }}</p>
                <p>
                    <a href="{{ url }}#suggestions" class="btn btn-primary">Suggestions?</a>
                </p>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" class="form-horizontal" enctype="multipart/form-data" id="form-pay">
                    <input id="ajax_url" type="hidden" class="form-control" name="ajax_url" value="{{ action }}"/>
                    <div class="form-group">
                        <div class="panel-heading" style="border-top: 1px solid #dcdcdc;">
                            <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_general_settings }}</h3>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="payment_paynl_version">Version</label>
                        <div class="col-sm-10">
                            <input id="pay_current_version" type="hidden" class="form-control" name="pay_current_version" value="{{ version }}"/>
                            <div class="version">
                                <span id="paynl_version_check_current_version">{{ version }}</span>
                                <button title="Submit" id="check_version_submit" class="btn btn-primary">Check Version</button>
                                <span id="paynl_version_check">
                                    <span id="paynl_version_check_loading" class="payHide">Loading...</span>
                                    <span id="paynl_version_check_result" class="payHide"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="payment_paynl_general_tokencode">{{ text_tokencode }}</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="payment_paynl_general_tokencode" value="{{ tokencode }}"/>
                            {% if error_tokencode %}
                                <div class="text-danger">{{ error_tokencode }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="payment_paynl_general_apitoken">{{ text_apitoken }}</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" name="payment_paynl_general_apitoken" value="{{ apitoken }}"/>
                            {% if error_apitoken %}
                                <div class="text-danger">{{ error_apitoken }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="payment_paynl_general_serviceid">{{ text_serviceid }}</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="payment_paynl_general_serviceid" value="{{ serviceid }}"/>
                            {% if error_apitoken %}
                                <div class="text-danger">{{ error_apitoken }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="payment_paynl_general_testmode">
                            <span data-toggle="tooltip" title="{{ text_testmode_tooltip }}">{{ text_testmode }}</span>
                        </label>
                        <div class="col-sm-10">
                            <select name="payment_paynl_general_testmode" id="payment_paynl_general_testmode" class="form-control">
                                {% if testmode %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                    {% if availability_fast_checkout %}
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="{{ fast_checkout }}">
                                <span data-toggle="tooltip" title="{{ text_display_fast_checkout_tooltip }}">{{ text_display_fast_checkout }}</span>
                            </label>
                            <div class="col-sm-10 fast-checkout-select-block">
                                <select name="{{ fast_checkout }}" id="{{ fast_checkout }}" class="form-control">
                                    {% if display_fast_checkout %}
                                        <option value="1" selected="selected">{{ text_enabled }}</option>
                                        <option value="0">{{ text_disabled }}</option>
                                    {% else %}
                                        <option value="1">{{ text_enabled }}</option>
                                        <option value="0" selected="selected">{{ text_disabled }}</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>

                        <div id="dependent-fields" style="display: none;">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Show Button On</label>
                                <div class="col-sm-10">
                                    <div style="display: flex; gap: 10px;">
                                        {% for place in button_places_list %}
                                            <label class="checkbox-inline">
                                                <input type="checkbox" name="{{ fast_checkout_button_places_name }}[]" value="{{ place.key }}" {% if place.key in fast_checkout_checked_button_places %}checked{% endif %}>
                                                {{ place.value }}
                                            </label>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group required">
                                <label class="col-sm-2 control-label" for="{{ fast_checkout_default_shipping_name }}">
                                    {{ text_default_shipping_method }}
                                </label>
                                <div class="col-sm-10">
                                    {% for shipping_method in shipping_methods %}
                                        <label class="radio-inline">
                                            <input type="radio" name="{{ fast_checkout_default_shipping_name }}" value="{{ shipping_method.code }}"
                                                   {% if fast_checkout_default_shipping == shipping_method.code %}checked="checked"{% endif %}>
                                            {{ shipping_method.title }}
                                        </label>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="{{ fast_checkout_only_guest_name }}">
                                    {{ text_only_guest }}
                                </label>
                                <div class="col-sm-10 fast-checkout-only-guest">
                                    <select name="{{ fast_checkout_only_guest_name }}" class="form-control">
                                        {% if fast_checkout_only_guest %}
                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                        {% else %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
                            {% if fast_checkout_client_id_name %}
                                <div class="form-group required">
                                    <label class="col-sm-2 control-label" for="{{ fast_checkout_client_id_name }}">Script Client ID</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="{{ fast_checkout_client_id_name }}" value="{{ fast_checkout_client_id }}"/>
                                    </div>
                                </div>
                            {% endif %}
                            {% if fast_checkout_client_token_name %}
                                <div class="form-group required">
                                    <label class="col-sm-2 control-label" for="{{ fast_checkout_client_token_name }}">Client Token</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="{{ fast_checkout_client_token_name }}" value="{{ fast_checkout_client_token }}"/>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}

                    <div class="form-group">
                        <div class="panel-heading" id="show_advanced_settings" style="border-top: 1px solid #dcdcdc;">
                            <h3 class="panel-title"><i class="fa fa-gear"></i> {{ text_advanced_settings }} <i id="advanced_settings_icon" class="fa fa-chevron-down"></i></h3>
                        </div>
                    </div>
                    <div class="advanced_settings">
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="payment_paynl_general_prefix">
                                <span data-toggle="tooltip" title="{{ text_prefix_tooltip }}">{{ text_prefix }}</span>
                            </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="payment_paynl_general_prefix" value="{{ prefix }}"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="payment_paynl_general_gateway">
                                <span data-toggle="tooltip" title="{{ text_gateway_tooltip }}">{{ text_gateway }}</span>
                            </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="payment_paynl_general_gateway" value="{{ gateway }}"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"
                                   for="payment_paynl_general_refund_processing">
                            <span data-toggle="tooltip" title="{{ text_refund_processing_tooltip }}">
                                {{ text_refund_processing }}
                            </span></label>
                            <div class="col-sm-10">
                                <select name="payment_paynl_general_refund_processing"
                                        id="payment_paynl_general_refund_processing" class="form-control">
                                    {% if refund_processing %}
                                        <option value="1" selected="selected">{{ text_enabled }}</option>
                                        <option value="0">{{ text_disabled }}</option>
                                    {% else %}
                                        <option value="1">{{ text_enabled }}</option>
                                        <option value="0" selected="selected">{{ text_disabled }}</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"
                                   for="payment_paynl_general_auto_capture">
                            <span data-toggle="tooltip" title="{{ text_auto_capture_tooltip }}">
                                {{ text_auto_capture }}
                            </span></label>
                            <div class="col-sm-10">
                                <select name="payment_paynl_general_auto_capture"
                                        id="payment_paynl_general_auto_capture" class="form-control">
                                    {% if auto_capture %}
                                        <option value="1" selected="selected">{{ text_enabled }}</option>
                                        <option value="0">{{ text_disabled }}</option>
                                    {% else %}
                                        <option value="1">{{ text_enabled }}</option>
                                        <option value="0" selected="selected">{{ text_disabled }}</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"
                                   for="payment_paynl_general_auto_void">
                            <span data-toggle="tooltip" title="{{ text_auto_void_tooltip }}">
                                {{ text_auto_void }}
                            </span></label>
                            <div class="col-sm-10">
                                <select name="payment_paynl_general_auto_void"
                                        id="payment_paynl_general_auto_void" class="form-control">
                                    {% if auto_void %}
                                        <option value="1" selected="selected">{{ text_enabled }}</option>
                                        <option value="0">{{ text_disabled }}</option>
                                    {% else %}
                                        <option value="1">{{ text_enabled }}</option>
                                        <option value="0" selected="selected">{{ text_disabled }}</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"
                                   for="payment_paynl_general_follow_payment_method">
                            <span data-toggle="tooltip" title="{{ text_follow_payment_method_tooltip }}">
                                {{ text_follow_payment_method }}
                            </span></label>
                            <div class="col-sm-10">
                                <select name="payment_paynl_general_follow_payment_method"
                                        id="payment_paynl_general_follow_payment_method" class="form-control">
                                    {% if follow_payment_method %}
                                        <option value="1" selected="selected">{{ text_enabled }}</option>
                                        <option value="0">{{ text_disabled }}</option>
                                    {% else %}
                                        <option value="1">{{ text_enabled }}</option>
                                        <option value="0" selected="selected">{{ text_disabled }}</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="payment_paynl_general_display_icon">
                                <span data-toggle="tooltip" title="{{ text_display_icon_tooltip }}">{{ text_display_icon }}</span>
                            </label>
                            <div class="col-sm-10">
                                <select class="form-control" name="payment_paynl_general_display_icon">
                                    <option value="" {{ display_icon == '' ? 'selected="selected"': '' }}>{{ text_disabled }}</option>
                                    <option value="20x20" {{ display_icon == '20x20' ? 'selected="selected"': '' }}>20 x 20</option>
                                    <option value="25x25" {{ display_icon == '25x25' ? 'selected="selected"': '' }}>25 x 25</option>
                                    <option value="50x50" {{ display_icon == '50x50' ? 'selected="selected"': '' }}>50 x 50</option>
                                    <option value="75x75" {{ display_icon == '75x75' ? 'selected="selected"': '' }}>75 x 75</option>
                                    <option value="100x100" {{ display_icon == '100x100' ? 'selected="selected"': '' }}>100 x 100</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="payment_paynl_general_custom_exchange_url">
                                <span data-toggle="tooltip" title="{{ text_custom_exchange_url_tooltip }}">{{ text_custom_exchange_url }}</span>
                            </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="payment_paynl_general_custom_exchange_url" value="{{ custom_exchange_url }}"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="payment_paynl_general_custom_exchange_url">
                                <span data-toggle="tooltip" title="{{ text_logging_tooltip }}">{{ text_logging }}</span>
                            </label>
                            <div class="col-sm-10">
                                <select name="payment_paynl_general_logging" id="payment_paynl_general_logging" class="form-control">
                                    {% if logging == 0 %}
                                        <option value="1">{{ text_enabled }}</option>
                                        <option value="0" selected="selected">{{ text_disabled }}</option>
                                    {% else %}
                                        <option value="1" selected="selected">{{ text_enabled }}</option>
                                        <option value="0">{{ text_disabled }}</option>
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="payment_paynl_logs">Download logs</label>
                            <div class="col-sm-10">
                                <div class="version">
                                    <a id="download_logs" class="btn btn-primary" href="{{ action }}&downloadlogs=1" target="_BLANK">Download</a>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10 col-sm-offset-2">{{ text_current_ip }}{{ current_IP }}</div>
                            <label class="col-sm-2 control-label" for="payment_paynl_general_test_ip">
                                <span data-toggle="tooltip" title="{{ text_test_ip_tooltip }}">{{ text_test_ip }}</span>
                            </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="payment_paynl_general_test_ip" value="{{ test_ip }}"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="panel-heading" style="border-top: 1px solid #dcdcdc;  margin-top: 15px;">
                            <h3 class="panel-title"><i class="fa fa-euro"></i> {{ text_method_settings }}</h3>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="{{ payment_method_name }}_status">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <select name="{{ payment_method_name }}_status"
                                    id="{{ payment_method_name }}_status" class="form-control">
                                {% if status %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                            {% if error_status %}
                                <div class="text-danger">{{ error_status }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="{{ payment_method_name }}_label">Label</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="{{ payment_method_name }}_label"
                                   value="{{ label }}"/>
                        </div>
                    </div>
                    {% if post_payment == true %}
                        <div class="form-group">
                            <label class="col-sm-2 control-label"
                                   for="{{ payment_method_name }}_dob">
                            <span data-toggle="tooltip" title="{{ text_dob_tooltip }}">
                                {{ text_dob }}
                            </span></label>
                            <div class="col-sm-10">
                                <select name="{{ payment_method_name }}_dob" id="{{ payment_method_name }}_dob"
                                        class="form-control">
                                    <option value="0" {% if dob == "0" %} selected="selected" {% endif %}>{{ text_dob_disabled }}</option>
                                    <option value="1" {% if dob == "1" %} selected="selected" {% endif %}>{{ text_dob_enabled }}</option>
                                    <option value="2" {% if dob == "2" %} selected="selected" {% endif %}>{{ text_dob_required }}</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"
                                   for="{{ payment_method_name }}_coc">
                            <span data-toggle="tooltip" title="{{ text_coc_tooltip }}">
                                {{ text_coc }}
                            </span></label>
                            <div class="col-sm-10">
                                <select name="{{ payment_method_name }}_coc" id="{{ payment_method_name }}_coc"
                                        class="form-control">
                                    <option value="0" {% if coc == "0" %} selected="selected" {% endif %}>{{ text_coc_disabled }}</option>
                                    <option value="1" {% if coc == "1" %} selected="selected" {% endif %}>{{ text_coc_enabled }}</option>
                                    <option value="2" {% if coc == "2" %} selected="selected" {% endif %}>{{ text_coc_required }}</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"
                                   for="{{ payment_method_name }}_vat">
                            <span data-toggle="tooltip" title="{{ text_vat_tooltip }}">
                                {{ text_vat }}
                            </span></label>
                            <div class="col-sm-10">
                                <select name="{{ payment_method_name }}_vat" id="{{ payment_method_name }}_vat"
                                        class="form-control">
                                    <option value="0" {% if vat == "0" %} selected="selected" {% endif %}>{{ text_vat_disabled }}</option>
                                    <option value="1" {% if vat == "1" %} selected="selected" {% endif %}>{{ text_vat_enabled }}</option>
                                    <option value="2" {% if vat == "2" %} selected="selected" {% endif %}>{{ text_vat_required }}</option>
                                </select>
                            </div>
                        </div>
                    {% endif %}
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
                        <div class="col-sm-10">
                            <select name="{{ payment_method_name }}_geo_zone_id" id="input-geo-zone"
                                    class="form-control">
                                <option value="0">All Zones</option>
                                {% for geo_zone in geo_zones %}
                                    <option value="{{ geo_zone.geo_zone_id }}"
                                            {% if geo_zone.geo_zone_id == geo_zone_id %}
                                                selected="selected"
                                            {% endif %}
                                    >{{ geo_zone.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="{{ payment_method_name }}_customer_type">
                            <span data-toggle="tooltip" title="{{ text_customer_type_tooltip }}">
                                {{ text_customer_type }}
                            </span></label>
                        <div class="col-sm-10">
                            <select class="form-control" name="{{ payment_method_name }}_customer_type">
                                <option value="both" {{ customer_type == 'both' ? 'selected="selected"': '' }}>{{ text_both }}</option>
                                <option value="private" {{ customer_type == 'private' ? 'selected="selected"': '' }}>{{ text_private }}</option>
                                <option value="business" {{ customer_type == 'business' ? 'selected="selected"': '' }}>{{ text_business }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="{{ payment_method_name }}_confirm_on_start">
                            <span data-toggle="tooltip" title="{{ text_confirm_start_tooltip }}">
                                {{ text_confirm_start }}
                            </span></label>
                        <div class="col-sm-10">
                            <select class="form-control" name="{{ payment_method_name }}_confirm_on_start">
                                <option value="1" {{ confirm_on_start == 1 ? 'selected="selected"': '' }}>{{ text_enabled }}</option>
                                <option value="0" {{ confirm_on_start == 0 ? 'selected="selected"': '' }}>{{ text_disabled }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="{{ payment_method_name }}_send_status_updates"><span data-toggle="tooltip"
                                                                                         title="{{ text_send_statusupdates_tooltip }}">{{ text_send_statusupdates }}</span></label>
                        <div class="col-sm-10">
                            <select class="form-control" name="{{ payment_method_name }}_send_status_updates">
                                <option value="1" {{ send_status_updates == 1?'selected="selected"':'' }}>{{ text_enabled }}</option>
                                <option value="0" {{ send_status_updates == 0?'selected="selected"':'' }}>{{ text_disabled }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="{{ payment_method_name }}_pending_status"><span data-toggle="tooltip"
                                                                                    title="{{ text_status_pending_tooltip }}">{{ text_status_pending }}</span></label>
                        <div class="col-sm-10">
                            <select class="form-control" name="{{ payment_method_name }}_pending_status">
                                {% for order_status in order_statuses %}
                                    <option value="{{ order_status.order_status_id }}"
                                            {{ order_status.order_status_id == pending_status?'selected="selected"':'' }}>
                                        {{ order_status.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="{{ payment_method_name }}_completed_status"><span data-toggle="tooltip"
                                                                                      title="{{ text_status_complete_tooltip }}">{{ text_status_complete }}</span></label>
                        <div class="col-sm-10">
                            <select class="form-control" name="{{ payment_method_name }}_completed_status">
                                {% for order_status in order_statuses %}
                                    <option value="{{ order_status.order_status_id }}"
                                            {{ order_status.order_status_id == completed_status?'selected="selected"':'' }}>
                                        {{ order_status.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="{{ payment_method_name }}_canceled_status"><span
                                    data-toggle="tooltip"
                                    title="{{ text_status_canceled_tooltip }}">{{ text_status_canceled }}</span></label>
