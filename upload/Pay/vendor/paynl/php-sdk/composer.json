{
    "name": "paynl/php-sdk",
    "description": "Software Development Kit for implementing Pay.'s API version 3",
    "version": "1.0.5",
    "type": "library",
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "psr/container": "^2 || ^1",
        "psr/http-message": "^2 || ^1",
        "guzzlehttp/guzzle": "^7"
    },
    "license": "MIT",
    "support": {
        "email": "webshop@pay.nl"
    },
    "keywords": [
        "sdk",
        "api",
        "rest",
        "plugins"
    ],
    "require-dev": {
        "ext-simplexml": "*",
        "phpmd/phpmd": "^2",
        "phpstan/phpstan": "^2",
        "phpunit/phpunit": "^11",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3",
        "symfony/var-dumper": "^7"
    },
    "autoload": {
        "psr-4": {
            "PayNL\\Sdk\\": "src/"
        },
        "files": [
            "./src/Resources/functions/text.php",
            "./src/Resources/functions/vat.php",
            "./src/Resources/functions/misc.php"
        ]
    },
    "autoload-dev": {
            "psr-4": {
                "Tests\\": "tests/"
            }
        },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
    ],
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "discard-changes": true
    },
    "scripts": {
        "test": [
            "@style-check"
        ],
        "style-check": [
            "@phpstan",
            "@phpmd",
            "@phpcs"
        ],
        "phpstan": "vendor/bin/phpstan analyse",
        "phpmd": "vendor/bin/phpmd src,samples text phpmd.xml",
        "phpcs": "vendor/bin/phpcs"
    },
    "archive": {
        "exclude": [
            "!vendor",
            "composer.phar"
        ]
    }
}
